<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"
            android:id="@+id/v1"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"
            android:id="@+id/v2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/v1"
        app:layout_constraintEnd_toEndOf="@id/v2"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/home_banner"

        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/profile_img_cover"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/spotify_icon_round"
                android:id="@+id/profile_img"
                />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/profile_img_cover"
            app:layout_constraintTop_toTopOf="@id/profile_img_cover"
            app:layout_constraintBottom_toBottomOf="@id/profile_img_cover"
            app:singleSelection="true"
            android:layout_marginHorizontal="15dp"
            app:checkedChip="@+id/allchip"
            >

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all"
                android:id="@+id/allchip"
                app:chipBackgroundColor="@color/chip_style"
                app:chipCornerRadius="20dp"
                android:checkable="true"
                android:textColor="@color/white"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music"
                android:id="@+id/musicchip"
                app:chipBackgroundColor="@color/chip_style"
                app:chipCornerRadius="20dp"
                android:checkable="true"
                android:textColor="@color/white"/>

        </com.google.android.material.chip.ChipGroup>



    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/v1"
            app:layout_constraintEnd_toEndOf="@id/v2"
            app:layout_constraintTop_toBottomOf="@id/home_banner"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="80dp"
            android:id="@+id/musicCards"/>





    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>