<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SpotifyCloneApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/inter</item>
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->

<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <!-- res/values/styles.xml -->
    <style name="SearchBarShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="SearchViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/background</item>
    </style>


    <style name="SearchBar_Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.SpotifyCloneApp" parent="Base.Theme.SpotifyCloneApp" />
    <!-- res/values/colors.xml -->

    <style name="SearchBarSpotify" parent="Widget.Material3.SearchBar">
        <!-- Rounded corners -->
        <item name="shapeAppearanceOverlay">@style/SearchBar_Rounded</item>

        <!-- Semi-transparent white background -->
        <item name="backgroundTint">@color/background</item>

        <!-- Text colors -->
        <item name="titleTextColor">@color/spotify_text</item>
        <item name="hintTextColor">@color/spotify_text</item>

        <!-- Optional: remove shadow/elevation if you want flat look -->
        <item name="elevation">0dp</item>
    </style>

    <style name="SpotifyChip" parent="Widget.Material3.Chip.Assist">
        <!-- Background semi-transparent white -->
        <item name="chipBackgroundColor">@color/spotify_chip_bg</item>

        <!-- Text color -->
        <item name="android:textColor">@color/spotify_chip_text</item>

        <!-- Rounded edges -->
        <item name="shapeAppearanceOverlay">@style/Chip_Rounded</item>

        <!-- Remove elevation/shadow for flat look -->
        <item name="elevation">0dp</item>
    </style>

    <style name="Chip_Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- full pill -->
    </style>




</resources>
